<p id="notice"><%= notice %></p>

<h1>Listing Subjects</h1>

<table class="table table-condensed table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @subjects.each do |subject| %>
    <tr style="background-color: <%=subject.colour%>">
      <td><%= subject.name %></td>
      <td><%= link_to 'Show', subject, :class => "btn btn-primary btn-xs pull-right" %></td>
    </tr>
    <% end %>
  </tbody>
</table>
